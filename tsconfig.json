{
   "compilerOptions": {
      "target": "es6",
      "module": "commonjs",
      "moduleResolution": "node",
      "outDir": "dist",
      "declaration": true,
      "experimentalDecorators": true,
      "noImplicitAny": true,
      "sourceMap": true,
      "newLine": "LF"
   },
   "buildOnSave": false,
   "compileOnSave": true,
   "exclude": [
      "./**/*.d.ts",
      "node_modules"
   ],
   "include": [
      "./**/*.ts"
   ]
}