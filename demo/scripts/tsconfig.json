{
   "compilerOptions": {
      "target": "es5",
      "module": "commonjs",
      "moduleResolution": "node",
      "outDir": "../dist",
      "jsx": "react",
      "experimentalDecorators": true,
      "noImplicitAny": true,
      "sourceMap": true,
      "lib": [ "es5", "dom", "es2015.promise" ],
      "newLine": "LF"
   },
   "buildOnSave": false,
   "compileOnSave": true,
   "exclude": [
      "./**/*.d.ts",
      "node_modules"
   ],
   "include": [
      "./**/*.ts"
   ]
}